---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Brightening Luminous Facial - Mizzlady Aesthetic | Rawatan Wajah Cerah & Glowing">
  <Header />
  
  <!-- Hero Section -->
  <section class="page-hero">
    <div class="container">
      <div class="hero-content">
        <h1>Brightening Luminous Facial üåü</h1>
        <p class="hero-subtitle">Rawatan Wajah untuk Kulit Cerah, Glowing & Bersinar Sihat</p>
      </div>
    </div>
  </section>

  <!-- Main Content -->
  <section class="facial-content">
    <div class="container">
      <div class="content-grid">
        <!-- Description Section -->
        <div class="description-section">
          <div class="content-card">
            <h2>Tentang Rawatan</h2>
            <p>Brightening Luminous Facial ialah rawatan wajah yang direka khas untuk:</p>
            <ul class="feature-list">
              <li>Mencerahkan tona kulit tidak sekata</li>
              <li>Mengurangkan kusam & keletihan kulit</li>
              <li>Memberi efek "glow" serta-merta</li>
              <li>Melembapkan & menenangkan kulit</li>
            </ul>
          </div>

          <div class="content-card">
            <h2>Kebaikan Utama</h2>
            <ul class="benefit-list">
              <li>
                <div class="benefit-icon">
                  <i class="fas fa-star"></i>
                </div>
                <div class="benefit-text">
                  <h4>Kulit lebih cerah & berseri selepas sesi pertama</h4>
                </div>
              </li>
              <li>
                <div class="benefit-icon">
                  <i class="fas fa-magic"></i>
                </div>
                <div class="benefit-text">
                  <h4>Mengurangkan bintik hitam dan pigmentasi ringan</h4>
                </div>
              </li>
              <li>
                <div class="benefit-icon">
                  <i class="fas fa-heart"></i>
                </div>
                <div class="benefit-text">
                  <h4>Menjadikan kulit lebih halus dan lembut</h4>
                </div>
              </li>
              <li>
                <div class="benefit-icon">
                  <i class="fas fa-shield-alt"></i>
                </div>
                <div class="benefit-text">
                  <h4>Sesuai untuk semua jenis kulit, termasuk kulit sensitif</h4>
                </div>
              </li>
            </ul>
          </div>
        </div>

        <!-- Info Cards Section -->
        <div class="info-section">
          <div class="info-card duration-card">
            <div class="info-icon">
              <i class="fas fa-clock"></i>
            </div>
            <h3>‚è± Tempoh Rawatan</h3>
            <p class="info-value">60 ‚Äì 75 minit</p>
          </div>

          <div class="info-card frequency-card">
            <div class="info-icon">
              <i class="fas fa-calendar-alt"></i>
            </div>
            <h3>üìÜ Disarankan</h3>
            <p class="info-value">1‚Äì2 kali sebulan untuk hasil berpanjangan dan maksimum</p>
          </div>

          <div class="cta-card">
            <h3>Sedia untuk Rawatan?</h3>
            <p>Tempah slot anda sekarang dan rasai perbezaan kulit yang cerah dan berseri!</p>
            <a href="https://wa.me/60108061350?text=Saya%20berminat%20dengan%20Brightening%20Luminous%20Facial.%20Boleh%20saya%20tahu%20lebih%20lanjut%3F" class="btn btn-primary" target="_blank" rel="noopener noreferrer">
              <i class="fab fa-whatsapp"></i>
              Tempah Sekarang
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Before/After Gallery Section -->
  <section class="gallery-section">
    <div class="container">
      <div class="section-title">
        <h2>Hasil Rawatan</h2>
        <p>Lihat transformasi kulit pelanggan kami</p>
      </div>
      
      <div class="results-gallery">
        <div class="result-card">
          <img src="https://img.webniaga.my/mizzlady/facial-before-after-1.jpg" alt="Hasil Facial Treatment 1" />
          <div class="result-overlay">
            <h4>Kulit Lebih Cerah</h4>
            <p>Selepas 3 sesi rawatan</p>
          </div>
        </div>
        
        <div class="result-card">
          <img src="https://img.webniaga.my/mizzlady/facial-before-after-2.jpg" alt="Hasil Facial Treatment 2" />
          <div class="result-overlay">
            <h4>Pigmentasi Berkurang</h4>
            <p>Selepas 4 sesi rawatan</p>
          </div>
        </div>
        
        <div class="result-card">
          <img src="https://img.webniaga.my/mizzlady/facial-before-after-3.jpg" alt="Hasil Facial Treatment 3" />
          <div class="result-overlay">
            <h4>Kulit Glowing</h4>
            <p>Selepas 2 sesi rawatan</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Related Services -->
  <section class="related-services">
    <div class="container">
      <div class="section-title">
        <h2>Rawatan Lain</h2>
        <p>Jelajahi perkhidmatan lain yang mungkin anda minati</p>
      </div>
      
      <div class="services-grid">
        <div class="service-card">
          <div class="service-icon">
            <i class="fas fa-spa"></i>
          </div>
          <h3>Spa Bridal</h3>
          <p>Pakej istimewa untuk pengantin tampil sempurna</p>
          <a href="/#services" class="btn btn-outline">Ketahui Lebih</a>
        </div>
        
        <div class="service-card">
          <div class="service-icon">
            <i class="fas fa-weight"></i>
          </div>
          <h3>Slimming Program</h3>
          <p>Program penurunan berat badan yang selamat</p>
          <a href="/#services" class="btn btn-outline">Ketahui Lebih</a>
        </div>
        
        <div class="service-card">
          <div class="service-icon">
            <i class="fas fa-magic"></i>
          </div>
          <h3>Aesthetic Treatment</h3>
          <p>Rawatan estetik lanjutan untuk kecantikan optimal</p>
          <a href="/#services" class="btn btn-outline">Ketahui Lebih</a>
        </div>
      </div>
    </div>
  </section>

  <Footer />
</Layout>

<style>
  .page-hero {
    background: linear-gradient(135deg, var(--primary-pink), var(--secondary-peach));
    padding: 120px 0 80px;
    text-align: center;
  }
  
  .hero-content h1 {
    color: var(--accent-rose);
    font-size: 3rem;
    margin-bottom: 1rem;
  }
  
  .hero-subtitle {
    font-size: 1.3rem;
    color: var(--text-dark);
    font-weight: 500;
    margin: 0;
  }
  
  .facial-content {
    padding: 80px 0;
    background: var(--white);
  }
  
  .content-grid {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 4rem;
  }
  
  .content-card {
    background: var(--beige);
    padding: 2.5rem;
    border-radius: 20px;
    margin-bottom: 2rem;
    box-shadow: 0 5px 20px var(--shadow);
  }
  
  .content-card h2 {
    color: var(--accent-rose);
    margin-bottom: 1.5rem;
    font-size: 2rem;
  }
  
  .feature-list {
    list-style: none;
    padding: 0;
  }
  
  .feature-list li {
    padding: 0.8rem 0;
    color: var(--text-dark);
    position: relative;
    padding-left: 2rem;
    font-size: 1.1rem;
  }
  
  .feature-list li::before {
    content: '‚ú®';
    position: absolute;
    left: 0;
    font-size: 1.2rem;
  }
  
  .benefit-list {
    list-style: none;
    padding: 0;
  }
  
  .benefit-list li {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1.5rem;
  }
  
  .benefit-icon {
    width: 50px;
    height: 50px;
    background: linear-gradient(45deg, var(--accent-rose), #ff6b9d);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 1.2rem;
    flex-shrink: 0;
  }
  
  .benefit-text h4 {
    margin: 0;
    color: var(--text-dark);
    font-size: 1.1rem;
    font-weight: 500;
  }
  
  .info-section {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }
  
  .info-card {
    background: var(--white);
    padding: 2rem;
    border-radius: 20px;
    text-align: center;
    box-shadow: 0 5px 20px var(--shadow);
    border-left: 4px solid var(--accent-rose);
  }
  
  .info-icon {
    width: 60px;
    height: 60px;
    background: linear-gradient(45deg, var(--accent-rose), #ff6b9d);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 1.5rem;
    margin: 0 auto 1rem;
  }
  
  .info-card h3 {
    color: var(--accent-rose);
    margin-bottom: 1rem;
    font-size: 1.3rem;
  }
  
  .info-value {
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--text-dark);
    margin: 0;
  }
  
  .cta-card {
    background: linear-gradient(135deg, var(--accent-rose), #ff6b9d);
    color: white;
    padding: 2.5rem;
    border-radius: 20px;
    text-align: center;
    box-shadow: 0 10px 30px rgba(233, 30, 99, 0.3);
  }
  
  .cta-card h3 {
    color: white;
    margin-bottom: 1rem;
  }
  
  .cta-card p {
    color: rgba(255, 255, 255, 0.9);
    margin-bottom: 2rem;
  }
  
  .btn-primary {
    background: white;
    color: var(--accent-rose);
    font-weight: 600;
  }
  
  .btn-primary:hover {
    background: var(--beige);
    transform: translateY(-2px);
  }
  
  .gallery-section {
    background: var(--beige);
    padding: 80px 0;
  }
  
  .results-gallery {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }
  
  .result-card {
    position: relative;
    border-radius: 15px;
    overflow: hidden;
    box-shadow: 0 10px 30px var(--shadow);
    transition: transform 0.3s ease;
  }
  
  .result-card:hover {
    transform: translateY(-5px);
  }
  
  .result-card img {
    width: 100%;
    height: 250px;
    object-fit: cover;
  }
  
  .result-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: linear-gradient(transparent, rgba(0, 0, 0, 0.8));
    color: white;
    padding: 2rem 1.5rem 1.5rem;
  }
  
  .result-overlay h4 {
    margin: 0 0 0.5rem 0;
    font-size: 1.2rem;
  }
  
  .result-overlay p {
    margin: 0;
    color: rgba(255, 255, 255, 0.8);
  }
  
  .related-services {
    background: var(--white);
    padding: 80px 0;
  }
  
  .services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }
  
  .service-card {
    background: var(--beige);
    padding: 2rem;
    border-radius: 20px;
    text-align: center;
    box-shadow: 0 5px 20px var(--shadow);
    transition: transform 0.3s ease;
  }
  
  .service-card:hover {
    transform: translateY(-5px);
  }
  
  .service-card .service-icon {
    width: 60px;
    height: 60px;
    background: linear-gradient(45deg, var(--accent-rose), #ff6b9d);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 1.5rem;
    margin: 0 auto 1.5rem;
  }
  
  .service-card h3 {
    color: var(--accent-rose);
    margin-bottom: 1rem;
  }
  
  .service-card p {
    margin-bottom: 1.5rem;
  }
  
  .btn-outline {
    background: transparent;
    color: var(--accent-rose);
    border: 2px solid var(--accent-rose);
    box-shadow: none;
  }
  
  .btn-outline:hover {
    background: var(--accent-rose);
    color: white;
  }
  
  @media (max-width: 768px) {
    .hero-content h1 {
      font-size: 2.2rem;
    }
    
    .hero-subtitle {
      font-size: 1.1rem;
    }
    
    .content-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
    
    .content-card {
      padding: 2rem;
    }
    
    .cta-card {
      padding: 2rem;
    }
    
    .results-gallery {
      grid-template-columns: 1fr;
    }
    
    .services-grid {
      grid-template-columns: 1fr;
    }
  }
  
  @media (max-width: 480px) {
    .page-hero {
      padding: 100px 0 60px;
    }
    
    .content-card {
      padding: 1.5rem;
    }
    
    .benefit-list li {
      gap: 0.8rem;
    }
    
    .benefit-icon {
      width: 40px;
      height: 40px;
      font-size: 1rem;
    }
  }
</style>