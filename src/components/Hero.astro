<style>
  .hero {
    position: relative;
    height: 100vh;
    min-height: 600px;
    display: flex;
    align-items: center;
    overflow: hidden;
  }
  
  .hero-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
  }
  
  .hero-background img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }
  
  .hero-content {
    width: 100%;
    position: relative;
    z-index: 1;
  }
  
  .hero-cta {
    text-align: center;
    position: absolute;
    bottom: 40px;
    left: 50%;
    transform: translateX(-50%);
  }
  
  .btn-lg {
    padding: 18px 35px;
    font-size: 1.1rem;
    font-weight: 600;
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
  }
  
  .btn i {
    margin-right: 10px;
    font-size: 1.2rem;
  }
  
  @media (max-width: 768px) {
    .hero {
      height: 80vh;
      min-height: 500px;
    }
    
    .hero-cta {
      bottom: 30px;
    }
    
    .btn-lg {
      padding: 15px 25px;
      font-size: 1rem;
    }
  }
  
  @media (max-width: 480px) {
    .hero-cta {
      bottom: 20px;
    }
  }
