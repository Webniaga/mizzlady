<style>
  .contact {
    background: var(--beige);
  }
  
  .contact-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    margin-bottom: 3rem;
  }
  
  .contact-cta {
    display: flex;
    align-items: center;
  }
  
  .cta-box {
    background: var(--white);
    padding: 3rem;
    border-radius: 20px;
    text-align: center;
    box-shadow: 0 10px 30px var(--shadow);
    width: 100%;
  }
  
  .cta-icon {
    width: 80px;
    height: 80px;
    background: #25d366;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1.5rem;
    color: white;
    font-size: 2.5rem;
  }
  
  .cta-box h3 {
    color: var(--accent-rose);
    margin-bottom: 1rem;
  }
  
  .cta-box p {
    margin-bottom: 2rem;
    font-size: 1.1rem;
  }
  
  .contact-info {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }
  
  .info-card {
    display: flex;
    align-items: center;
    gap: 1rem;
    background: var(--white);
    padding: 1.5rem;
    border-radius: 15px;
    box-shadow: 0 5px 15px var(--shadow);
    transition: all 0.3s ease;
  }
  
  .info-card:hover {
    transform: translateX(5px);
  }
  
  .info-icon {
    width: 50px;
    height: 50px;
    background: linear-gradient(45deg, var(--accent-rose), #ff6b9d);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 1.2rem;
    flex-shrink: 0;
  }
  
  .info-content h4 {
    margin: 0 0 0.5rem 0;
    color: var(--accent-rose);
    font-size: 1.1rem;
  }
  
  .info-content p {
    margin: 0;
    color: var(--text-light);
  }
  
  .info-content a {
    color: var(--accent-rose);
    text-decoration: none;
  }
  
  .info-content a:hover {
    text-decoration: underline;
  }
  
  /* Booking Form Styles */
  .booking-form-section {
    margin: 4rem 0 3rem;
  }
  
  .booking-form-container {
    background: var(--white);
    padding: 3rem;
    border-radius: 20px;
    box-shadow: 0 10px 30px var(--shadow);
    max-width: 800px;
    margin: 0 auto;
  }
  
  .booking-form-container h3 {
    color: var(--accent-rose);
    text-align: center;
    margin-bottom: 0.5rem;
    font-size: 2rem;
  }
  
  .booking-form-container > p {
    text-align: center;
    margin-bottom: 2rem;
    color: var(--text-light);
  }
  
  .booking-form {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }
  
  .form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1.5rem;
  }
  
  .form-group {
    display: flex;
    flex-direction: column;
  }
  
  .form-group label {
    margin-bottom: 0.5rem;
    color: var(--text-dark);
    font-weight: 500;
    font-size: 0.95rem;
  }
  
  .form-group input,
  .form-group select,
  .form-group textarea {
    padding: 12px 15px;
    border: 2px solid #e0e0e0;
    border-radius: 10px;
    font-size: 1rem;
    transition: all 0.3s ease;
    font-family: inherit;
  }
  
  .form-group input:focus,
  .form-group select:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: var(--accent-rose);
    box-shadow: 0 0 0 3px rgba(233, 30, 99, 0.1);
  }
  
  .form-group textarea {
    resize: vertical;
    min-height: 100px;
  }
  
  .btn-form {
    width: 100%;
    padding: 18px;
    font-size: 1.1rem;
    font-weight: 600;
    margin-top: 1rem;
  }
  
  .btn-form i {
    margin-right: 10px;
  }
  
  .contact-social {
    text-align: center;
    background: var(--white);
    padding: 2.5rem;
    border-radius: 20px;
    box-shadow: 0 5px 20px var(--shadow);
  }
  
  .contact-social h3 {
    color: var(--accent-rose);
    margin-bottom: 1.5rem;
  }
  
  .social-links {
    display: flex;
    justify-content: center;
    gap: 2rem;
  }
  
  .social-link {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    text-decoration: none;
    color: var(--text-light);
    transition: all 0.3s ease;
  }
  
  .social-link:hover {
    color: var(--accent-rose);
    transform: translateY(-3px);
  }
  
  .social-link i {
    width: 50px;
    height: 50px;
    background: var(--beige);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    transition: all 0.3s ease;
  }
  
  .social-link:hover i {
    background: var(--accent-rose);
    color: white;
  }
  
  .social-link span {
    font-size: 0.9rem;
    font-weight: 500;
  }
  
  @media (max-width: 768px) {
    .contact-content {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
    
    .cta-box {
      padding: 2rem;
    }
    
    .booking-form-container {
      padding: 2rem;
    }
    
    .form-row {
      grid-template-columns: 1fr;
      gap: 1rem;
    }
    
    .social-links {
      gap: 1rem;
    }
    
    .social-link i {
      width: 40px;
      height: 40px;
      font-size: 1.2rem;
    }
  }
  
  @media (max-width: 480px) {
    .booking-form-container {
      padding: 1.5rem;
    }
    
    .booking-form-container h3 {
      font-size: 1.6rem;
    }
    
    .social-links {
      flex-wrap: wrap;
      gap: 1rem;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const bookingForm = document.getElementById('bookingForm');
    
    // Set minimum date to today
    const today = new Date().toISOString().split('T')[0];
    const tarikhInput = document.getElementById('tarikh');
    if (tarikhInput) {
      tarikhInput.setAttribute('min', today);
    }
    
    bookingForm?.addEventListener('submit', function(e) {
      e.preventDefault();
      
      // Get form data
      const formData = new FormData(this);
      const data = {};
      
      for (let [key, value] of formData.entries()) {
        data[key] = value;
      }
      
      // Validate required fields
      if (!data.nama || !data.telefon || !data.perkhidmatan) {
        alert('Sila isi semua maklumat yang diperlukan (bertanda *)');
        return;
      }
      
      // Format WhatsApp message
      let message = `*TEMPAHAN BARU - MIZZLADY AESTHETIC*\n\n`;
      message += `👤 *Nama:* ${data.nama}\n`;
      message += `📱 *Telefon:* ${data.telefon}\n`;
      
      if (data.email) {
        message += `📧 *Email:* ${data.email}\n`;
      }
      
      if (data.umur) {
        message += `🎂 *Umur:* ${data.umur} tahun\n`;
      }
      
      message += `💆‍♀️ *Perkhidmatan:* ${data.perkhidmatan}\n`;
      
      if (data.tarikh) {
        const date = new Date(data.tarikh);
        const formattedDate = date.toLocaleDateString('ms-MY', {
          weekday: 'long',
          year: 'numeric',
          month: 'long',
          day: 'numeric'
        });
        message += `📅 *Tarikh Pilihan:* ${formattedDate}\n`;
      }
      
      if (data.masa) {
        message += `⏰ *Masa Pilihan:* ${data.masa}\n`;
      }
      
      if (data.catatan) {
        message += `📝 *Catatan:* ${data.catatan}\n`;
      }
      
      message += `\n✨ Terima kasih kerana memilih Mizzlady Aesthetic!`;
      
      // Encode message for WhatsApp URL
      const encodedMessage = encodeURIComponent(message);
      const whatsappURL = `https://wa.me/60182171800?text=${encodedMessage}`;
      
      // Open WhatsApp
      window.open(whatsappURL, '_blank');
      
      // Reset form
      this.reset();
      
      // Show success message
      alert('Maklumat tempahan telah dihantar ke WhatsApp. Terima kasih!');
    });
  });
</script>