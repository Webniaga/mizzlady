<style>
  .testimonials {
    background: var(--white);
  }
  
  .testimonials-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }
  
  .testimonial-card {
    background: var(--beige);
    padding: 2rem;
    border-radius: 20px;
    box-shadow: 0 5px 20px var(--shadow);
    transition: all 0.3s ease;
    border-left: 4px solid var(--accent-rose);
  }
  
  .testimonial-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
  }
  
  .testimonial-content {
    margin-bottom: 1.5rem;
  }
  
  .stars {
    color: var(--gold);
    margin-bottom: 1rem;
    font-size: 1.1rem;
  }
  
  .testimonial-content p {
    font-style: italic;
    line-height: 1.6;
    color: var(--text-dark);
    margin: 0;
  }
  
  .testimonial-author {
    display: flex;
    align-items: center;
    gap: 1rem;
  }
  
  .author-avatar {
    width: 50px;
    height: 50px;
    background: linear-gradient(45deg, var(--accent-rose), #ff6b9d);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-weight: bold;
    font-size: 1.2rem;
  }
  
  .author-info h4 {
    margin: 0;
    color: var(--accent-rose);
    font-size: 1.1rem;
  }
  
  .author-info p {
    margin: 0;
    color: var(--text-light);
    font-size: 0.9rem;
  }
  
  @media (max-width: 768px) {
    .testimonial-card {
      padding: 1.5rem;
    }
    
    .testimonials-grid {
      grid-template-columns: 1fr;
    }
  }
</style>