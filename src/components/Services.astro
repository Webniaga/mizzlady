<style>
  .services {
    background: var(--white);
  }
  
  .services-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    margin-bottom: 3rem;
  }
  
  .service-card {
    background: var(--white);
    padding: 2.5rem;
    border-radius: 20px;
    box-shadow: 0 10px 30px var(--shadow);
    text-align: center;
    transition: all 0.3s ease;
    border: 1px solid rgba(248, 215, 218, 0.3);
  }
  
  .service-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
  }
  
  .service-icon {
    width: 80px;
    height: 80px;
    background: linear-gradient(45deg, var(--primary-pink), var(--secondary-peach));
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1.5rem;
    color: var(--accent-rose);
    font-size: 2rem;
  }
  
  .service-icon svg {
    width: 40px;
    height: 40px;
  }
  
  .service-content h3 {
    color: var(--accent-rose);
    margin-bottom: 1rem;
    font-size: 1.5rem;
  }
  
  .service-content p {
    margin-bottom: 1.5rem;
    text-align: left;
  }
  
  .service-features {
    list-style: none;
    text-align: left;
  }
  
  .service-features li {
    padding: 0.5rem 0;
    color: var(--text-light);
    position: relative;
    padding-left: 1.5rem;
  }
  
  .service-features li::before {
    content: 'âœ“';
    position: absolute;
    left: 0;
    color: var(--accent-rose);
    font-weight: bold;
  }
  
  .services-cta {
    text-align: center;
    background: var(--beige);
    padding: 3rem;
    border-radius: 20px;
  }
  
  .services-cta p {
    font-size: 1.2rem;
    margin-bottom: 1.5rem;
    color: var(--text-dark);
  }
  
  @media (max-width: 768px) {
    .services-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }
    
    .service-card {
      padding: 2rem;
    }
    
    .services-cta {
      padding: 2rem;
    }
  }
  
  @media (max-width: 480px) {
    .service-card {
